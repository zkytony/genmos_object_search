<launch>

  <arg name="spot" value="002"/>

  <!-- Run SLOOP object search decision making interface (POMDP planner) -->
  <node name="sloop_ros" ns="spot_$(arg spot)"
        pkg="sloop_object_search_ros" type="run_search.py" output="screen">
    <!-- So strange. you can't do ~config -->
    <rosparam param="config" command="load"
              file="$(find sloop_object_search_ros)/config/experiments/spot_exp1_local_lab121.yaml"/>
    <param name="robot_id" value="spot_$(arg spot)"/>
    <param name="world_frame" value="graphnav_map"/>
