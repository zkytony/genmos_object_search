<launch>
  <arg name="spot" value="002"/>

  <!-- Action Executor for Spot -->
  <node name="action_executor" ns="spot_$(arg spot)"
        pkg="sloop_object_search_ros" type="spot_action_executor.py" output="screen">
    <param name="robot_id" value="spot_$(arg spot)"/>
    <param name="world_frame" value="graphnav_map"/>
    <param name="body_frame" value="body"/>
    <remap from="~action"  to="/spot_$(arg spot)/sloop_ros/action"/>
    <remap from="~robot_pose" to="/spot_hand_pose"/>
  </node>
</launch>
